<div class="container c-index">
  <span>レベル</span>
  <span>並び順</span>
  <%= render 'layouts/icon' %>
</div>
<div class="container">
  <% @posts.each do |p| %>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="profile">
          <%= link_to user_path(p.user_id) do %>
            <%= attachment_image_tag User.find(p.user_id), :profile_image, :fill, 80, 80, fallback:"no_image.jpg", size:"80x80" %>
            <p class="user-name"><%= User.find(p.user_id).name %></p>
          <% end %>
        </div>
      </div>
      <div class="col-6 main-content in-b">
        <div class="content">
          <%= p.level %>：<%= p.category %>
          <% if p.user_id == current_user.id %>
            <%= link_to "削除", post_path(p.id), method: :delete, class:"btn btn-danger btn-sm mb-1 mr-5 float-right" %>
          <% end %>
        </div>
        <div class="content">
          <%= link_to post_path(p.id) do %>
            <%= attachment_image_tag p, :prob_image, class:"prob_image mx-auto" %>
          <% end %>  
        </div>
        <div class="content float-right mr-5 mt-2 mb-3">
          <%= p.created_at.to_s(:datetime_jp) %>
        </div>
      </div>
      <div class="col-3">
        <p><i class="fa fa-comment-o"></i> コメント数</p>
        <p><i class="far fa-star"></i> 星</p>
      </div>
    </div>
    <hr>
    <br>
    <br>
  <% end %>
</div>