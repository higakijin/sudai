<div class="container c-index">
  <label for="level-select">難易度：</label>
  <select name="level" id="seleceLevel">
    <option id="">指定なし</option>
    <option id="レベル1（中学）">レベル1（中学）</option>
    <option id="レベル2（中卒）">レベル2（中卒）</option>
    <option id="レベル3（高校）">レベル3（高校）</option>
    <option id="レベル4（高卒）">レベル4（高卒）</option>
    <option id="レベル5（大学）">レベル5（大学）</option>
    <option id="レベル6（研究者）">レベル6（研究者）</option>
    <option id="レベル7（達人）">レベル7（達人）</option>
  </select>
  
  <span>並び順</span>
  <div class="row float-right mt-3">
    <%= render 'layouts/icon' %>
  </div>
</div>
<div class="container">
  <% @posts.each do |p| %>
    <div class="teims <%= p.level %> mb-5">
      <div class="row">
        <div class="col-2 offset-1 clear-fix">
          <div class="profile float-right">
            <%= link_to user_path(p.user_id) do %>
              <%= attachment_image_tag User.find(p.user_id), :profile_image, :fill, 80, 80, fallback:"no_image.jpg", size:"80x80" %>
              <p class="user-name"><%= User.find(p.user_id).name %></p>
            <% end %>
          </div>
        </div>
        <div class="col-6 main-content in-b">
          <div class="content mb-2">
            <%= p.level %>：<%= p.category %>
            <% if p.user_id == current_user.id %>
              <%= link_to "削除", post_path(p.id), method: :delete, class:"btn btn-danger btn-sm mb-1 mr-5 float-right" %>
            <% end %>
          </div>
          <div class="content">
            <%= link_to post_path(p.id) do %>
              <%= attachment_image_tag p, :prob_image, class:"prob_image mx-auto" %>
            <% end %>  
          </div>
          <p class="content float-right mr-5 mt-2 mb-3 text-secondary">
            <%= p.created_at.to_s(:datetime_jp) %>
          </p>
        </div>
        <div class="col-3">
          <p><i class="fa fa-comment-o"></i> コメント数</p>
          <p><i class="far fa-star"></i> <%= p.likes.count %></p>
        </div>
      </div>
      <hr>
    </div>
  <% end %>
</div>
