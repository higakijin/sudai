<div class="container c-index">
  <div class="row mt-3">
    <div class="col-3 mt-2">
      <h3 class="bg-primary text-light text-center p-2"><%= @post.level %></h3>
    </div>
    <div class="col-3 mt-2">
      <h4 class="p-2">：<%= @post.category %></h4>
    </div>
    <div class="col-1 offset-5 clear-fix">
      <%= link_to user_path(current_user) do %>
        <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg", size:"60x60", class:"ml-3 float-right circle" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container mb-3">
  <div class="row">
    <div class="col-2 clearfix">
      <%= link_to user_path(@post.user_id) do %>
        <%= attachment_image_tag User.find(@post.user_id), :profile_image, :fill, 80, 80, fallback:"no_image.jpg", size:"80x80", class:"float-right circle" %>
      <% end %>
    </div>
    <div class="col-7">
      <div class="row">
        <div class="col-6">
          <p class="user-name"><%= User.find(@post.user_id).name %></p>
        </div>
        <div class="col-5 clear-fix">
          <p class="text-secondary float-right" style="font-size: 13px;"><%= @post.created_at.to_s(:datetime_jp) %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= attachment_image_tag @post, :prob_image, class:"prob_image mx-auto" %>
        </div>
      </div>  
    </div>
    <div class="col-3">
      <div id="com_count_<%= @post.id %>">
        <%= render partial: "comments/count" %>
      </div>
      <div id="likes_buttons_<%= @post.id %>" > 
        <%= render partial: "likes/like", locals: {p: @post} %>
      </div>
      
    </div>
  </div>
  <details class="row">
    <summary class="col-1 offset-9 my-3 btn btn-sm btn-info">答えを見る</summary>
    <div class="col-7 offset-2">
      <%= attachment_image_tag @post, :ans_image, class:"ans_image mx-auto" %>
    </div>
  </details>
</div>
<div class="container">
  <hr>
</div>


<div id="comments_<%= @post.id %>">
  <%= render partial: 'comments/comment' %>
</div>