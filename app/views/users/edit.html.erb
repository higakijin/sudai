<%= form_with model:@user, local:true do |f| %>
  <div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 mt-3">
          <%= attachment_image_tag @user, :profile_image, :fill, 300, 300, fallback:"no_image.jpg", size:"300x300" %>
          <%= f.attachment_field :profile_image , placeholder: "画像をアップロード" %>
        </div>
        <div class="col-lg-8">
          <table class="edit_table">
            <tr>
              <th class="text-r">名前：</th>
              <td><%= f.text_field :name, class:"form-control" %></td>
            </tr>
            <tr>
              <th class="text-r">Eメール：</th>
              <td><%= f.email_field :email, class:"form-control" %></td>
            </tr>
            <tr>
              <th class="text-r">年齢：</th>
              <td><%= f.number_field :age, min:"0", class:"form-control" %></td>
            </tr>
            <tr>
              <th class="text-r">レベル：</th>
              <td><%= f.number_field :level, min:"1", max:"7", class:"form-control" %></td>
            </tr>
            <tr>
              <th class="text-r">目標：</th>
              <td><%= f.text_area :introduction, class:"form-control", rows:"3" %></td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit "更新", class:"float-right btn btn-success" %></td>
            </tr>
          </table>
        </div>
    </div>
  </div>
<% end %>
