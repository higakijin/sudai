<div class="photo">
    <div class="container text-light">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div style="color: red;">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, class:"form-control w-25" %>
        </div>

        <div class="field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-25" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <span>(最低<%= @minimum_password_length %>文字)</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control w-25" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control w-25" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-lg btn-success my-3" %>
        </div>
      <% end %>
    </div>

</div>