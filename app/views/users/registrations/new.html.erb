<div class="photo">
  <div class="text-danger">
    <h2 class="sing_m">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="error_m" style="color: red;">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
      <table class="sign_table">
        <tr>
          <th class="text-r"><%= f.label :名前 %>：</th>
          <td><%= f.text_field :name, autofocus: true, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="text-r"><%= f.label :Eメール %>：</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
        </tr>
        <tr>
          <th class="text-r"><%= f.label :パスワード %><% if @minimum_password_length %><span>(最低<%= @minimum_password_length %>文字)</span><% end %>：</th>
          <td><%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></td>
        </tr>
        <tr>
          <th class="text-r"><%= f.label :パスワード（確認用） %>：</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td class="content-r"><%= f.submit "登録", class:"btn btn-lg btn-success" %></td>
        </tr>
      </table>
    <% end %>
    <p class="text-r login_here">登録済み？<%= link_to "ログイン", new_user_session_path %>はこちら</p>
  </div>

</div>