<div class="photo">
  <div class="text-danger">
    <h2 class="sing_m">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="sign_table">
        <tr>
          <th class="text-r"><%= f.label :Eメール %>：</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
        </tr>
        <tr>
          <th class="text-r"><%= f.label :パスワード %>：</th>
          <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td class="content-r">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :ログイン情報を保存 %>
              </div>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td class="content-r"><%= f.submit "ログイン", class:"btn btn-lg btn-success" %></td>
        </tr>
      </table>
    <% end %>
    <p class="text-r login_here">登録してない？<%= link_to "新規登録", new_user_registration_path %>はこちら<br>
                                パスワードを忘れた方は<%= link_to "こちら", new_user_password_path %>へ</p>
  </div>
</div>
